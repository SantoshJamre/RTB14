<div class="min-h-screen flex items-center justify-center py-0">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
    <div class="text-center mb-6">
      <h1 class="text-2xl font-semibold text-gray-900">Sign in to your account</h1>
      <p class="mt-1 text-sm text-gray-600">Welcome back! Please enter your details.</p>
    </div>

    <form id="loginForm" class="space-y-5">
      <!-- Error message container -->
      <div id="error-message" class="hidden p-3 mb-4 text-sm text-red-700 bg-red-100 rounded-lg">
        <span id="error-text"></span>
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input id="email" name="email" type="email" required
               class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
               placeholder="you@example.com" />
      </div>

      <div>
        <div class="flex items-center justify-between mb-1.5">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <a href="/forgot-password" class="text-sm text-indigo-600 hover:text-indigo-500">Forgot?</a>
        </div>
        <input id="password" name="password" type="password" required
               class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
               placeholder="••••••••" />
      </div>

      <button id="loginBtn" type="submit" class="w-full inline-flex justify-center rounded-lg bg-indigo-600 px-4 py-2.5 text-white font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <span class="button-text">Sign in</span>
      </button>
    </form>

    <p class="mt-6 text-center text-sm text-gray-600">
      Don't have an account?
      <a class="text-indigo-600 hover:text-indigo-500" href="/register">Create one</a>
    </p>
  </div>
</div>

{{#if user}}
<script>
  // If user is already logged in, redirect to home
  window.location.href = '/';
</script>
{{else}}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('loginForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;
      const submitBtn = document.getElementById('loginBtn');
      const errorContainer = document.getElementById('error-message');
      const errorText = document.getElementById('error-text');

      // Function to show error message
      const showError = (message) => {
        errorText.textContent = message;
        errorContainer.classList.remove('hidden');
      };

      // Hide error when user starts typing
      ['email', 'password'].forEach(field => {
        document.getElementById(field).addEventListener('input', () => {
          errorContainer.classList.add('hidden');
        });
      });
      const buttonText = submitBtn.querySelector('.button-text');
      const originalBtnText = buttonText.textContent;
      
      try {
        // Show loading state
        submitBtn.disabled = true;
        buttonText.textContent = 'Signing in...';

        const response = await fetch('/api/user/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email, password }),
          credentials: 'include' // Important for sessions to work with CORS
        });

        const data = await response.json();

        if (!response.ok) {
          showError(data.message || 'Login failed');
          throw new Error(data.message || 'Login failed');
        }

        // Show success message
        buttonText.textContent = 'Success! Redirecting...';
        localStorage.setItem('userData', JSON.stringify(data));
        // Redirect to the specified URL or home page
        window.location.href = data.redirectTo || '/';
        
      } catch (error) {
        console.error('Login error:', error);
        showError(error.message || 'Login failed. Please try again.');
        buttonText.textContent = originalBtnText;
      } finally {
        submitBtn.disabled = false;
      }
    });
  });
</script>
{{/if}}
